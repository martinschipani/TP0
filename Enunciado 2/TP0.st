o := capitulos detect: [ : capitulo | capitulo estado = 'Completo'] ifNone: [ ^ nil ].	capituloCompleto obtener.	^ capituloCompleto ! !!Libro methodsFor: 'as yet unclassified' stamp: 'MartinSchipani 10/4/2021 01:19'!obtenerCantidadPaginas: nombreCapitulo	^ (self buscarCapitulo: nombreCapitulo) cantidadPaginas.! !!Libro methodsFor: 'initialization' stamp: 'MartinSchipani 10/4/2021 00:21'!initialize	capitulos := OrderedCollection new.! !!Libro methodsFor: 'private' stamp: 'MartinSchipani 10/4/2021 01:18'!buscarCapitulo: nombreCapitulo 	^ capitulos detect: [ : capitulo | capitulo nombre = nombreCapitulo ] ifNone: [ ^ nil ].! !